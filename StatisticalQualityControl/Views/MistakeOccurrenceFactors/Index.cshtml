@model IEnumerable<StatisticalQualityControl.Models.MistakeOccurrenceFactor>

@{
    ViewBag.Title = "Hata Sebepler";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="dashboard_graph">
            <div class="row x_title">
                <div class="col-md-6">
                    <h3>Hata Sebepleri</h3>
                </div>
                <div class="col-md-6">
                    <p style="float:right">
                        @Html.ActionLink("Hata Sebepleri Ekle", "Create")
                    </p>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">

                <table class="table">
                    <tr>
                        <th>
                           Hata Sebepleri
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MistakeOccurenceFactorName)
                            </td>
                            <td>
                                @Html.ActionLink("Güncelle", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Sil", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>